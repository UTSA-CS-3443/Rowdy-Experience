<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/my_image"
                android:layout_width="wrap_content"
                android:layout_height="179dp"
                android:layout_marginTop="0dp"
                android:contentDescription="My logo"
                android:src="@drawable/createaccount" />

            <EditText
                android:id="@+id/first_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="First name"
                android:layout_marginTop="50dp"

            android:inputType="textPersonName"
                android:padding="16dp" />

            <EditText
                android:id="@+id/last_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last name"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:padding="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/rounded_edit_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="text"
                android:padding="16dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/rounded_edit_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/class_year_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Class year (e.g. 2026)"
                android:inputType="number"
                android:padding="16dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/rounded_edit_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/major_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Major"
                android:inputType="textCapWords"
                android:padding="16dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/rounded_edit_text"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="16dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/rounded_edit_text"
                android:layout_marginBottom="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Row: Bird (left) and Create Button (right) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/bird_image"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:contentDescription="Bird image"
            android:src="@drawable/bird" />

        <Button
            android:id="@+id/create_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#002D72"
            android:elevation="3dp"
            android:layout_marginTop="85dp"
            android:paddingVertical="2dp"
            android:text="Create Profile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="casual"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
